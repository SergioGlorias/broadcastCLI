{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "lib": ["DOM", "ES2024"],
    "target": "es2024",
    "moduleResolution": "node",
    "module": "ESNext",
    "outDir": "./dist",
    "rootDir": "./src",
  }
}
